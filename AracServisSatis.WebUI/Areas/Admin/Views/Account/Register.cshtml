@model AracServisSatis.WebUI.Areas.Admin.Models.RegisterViewModel
@{
    ViewData["Title"] = "Kayıt Ol";
    Layout = null;
}
<link href="/admin/css/styles.css" rel="stylesheet" />
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg rounded-4">
                <div class="card-body p-4">
                    <h3 class="text-center mb-4">Kayıt Ol</h3>

                    <form asp-action="Register" method="post">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Name" class="form-label">Ad</label>
                                <input asp-for="Name" class="form-control" placeholder="Adınızı girin" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Surname" class="form-label">Soyad</label>
                                <input asp-for="Surname" class="form-control" placeholder="Soyadınızı girin" />
                                <span asp-validation-for="Surname" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="UserName" class="form-label">Kullanıcı Adı</label>
                            <input asp-for="UserName" class="form-control" placeholder="Kullanıcı Adı" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Mail" class="form-label">E-posta</label>
                            <input asp-for="Mail" class="form-control" placeholder="E-posta adresinizi girin" />
                            <span asp-validation-for="Mail" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Password" class="form-label">Şifre</label>
                            <input asp-for="Password" class="form-control" placeholder="Şifre belirleyin" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="ConfirmPassword" class="form-label">Şifre Tekrarı</label>
                            <input asp-for="ConfirmPassword" class="form-control" placeholder="Şifrenizi Tekrar Girin" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>


                        <button type="submit" class="btn btn-primary w-100 mb-3">Kayıt Ol</button>

                        <div class="text-center">
                            <a asp-action="Login" class="text-decoration-none">Zaten hesabınız var mı? Giriş yapın</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


